@font-face{
	font-family:"Kostic";
	src: url(<%= asset_path("Kostic-Regular.ttf") %>) format('truetype');
}

@font-face{
	font-family:"Kostic";
	src: url(<%= asset_path("Kostic-Bold.ttf") %>) format('truetype');
	font-weight:bold;
}

@font-face{
	font-family:"Kostic";
	src: url(<%= asset_path("Kostic-Thin.ttf") %>) format('truetype');
	font-weight:lighter;
}

.kostic{
	font-family:"Kostic";
}


.kostic1{
	font-family:"Kostic";
	font-weight:bold;
}


.circle{
	border-radius: 50%;
	display: inline-block;
	padding-top: 10px;
	height: 70px;
	width: 80px;
}
.landing-form{
	border:none;
	outline:none;
	border-bottom: solid 1px #01579B;
	font-size: 1.5em;
	color: #01579B;
}

::-webkit-input-placeholder { /* WebKit browsers */
    color:#01579B;
    opacity:  0.7;
}
:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
   color:#01579B;
   opacity:  0.7;
}
::-moz-placeholder { /* Mozilla Firefox 19+ */
   color:#01579B;
   opacity:  0.7;
